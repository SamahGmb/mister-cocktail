<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png", width:24 %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to cocktails_path, class: "nav-link" do %>
          <p class="bold-text" >cocktail list</p>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to new_cocktail_path, class: "nav-link" do %>
          <p class="bold-text" >create your cocktail</p>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <%= image_tag ("avatar.png"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <div>
              <%= link_to my_cocktails_cocktails_path, class: "dropdown-item" do %>
                <p class="bold-text" >my cockails</p>
              <% end %>
            </div>
            <div>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                <p class="bold-text" >sign out</p>
              <% end %>
            </div>
          </div>
        <% else %>
          <li class="nav-item active">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <p class="bold-text" >sign in</p>
            <% end %>
          </li>
        <% end %>
      </li>
    </ul>
  </div>
</div>
