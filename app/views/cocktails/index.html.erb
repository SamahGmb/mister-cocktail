<div class="banner-home">
  <%= image_tag "banner-home.jpg" %>
</div>
<div class="wrapper">
  <div class="cocktails-cards">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <div class="cocktail-card-title space-btw ">
          <div>
            <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
          </div>
          <div>
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt small-icone "></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
