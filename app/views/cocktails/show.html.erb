<div class="wrapper">
  <div class="cocktail-card">
    <div class="cocktail-card-title">
      <h1 class="text-center" ><%= @cocktail.name %></h1>
    </div>
    <div class="cocktail-card-details">
      <div class="cocktail-card-details-description">
        <h2>description</h2>
        <p><%= @cocktail.description %></p>
      </div>
      <div class="cocktail-card-details-ingredients">
        <h2>ingredients</h2>
        <% @cocktail.doses.each do |dose| %>
          <ul class="flex">
            <li class="flex">
              <div>
                <i class="fas fa-caret-right"></i>
              </div>
              <div class="padding-right">
                <span class="bold-text"> <%= dose.ingredient.name %> </span> |
              </div>
              <div class="padding-right" >
                <%= dose.amount %> <%= dose.unit %>
              </div>
            </li>
            <li>
              <%= link_to edit_dose_path(dose) do %>
                <i class="far fa-edit  small-icone padding-left "></i>
              <% end %>
            </li>
            <li>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="far fa-trash-alt small-icone"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
      <div class="cocktail-card-details-steps">

      </div>
    </div>
  </div>
  <div class="center">
    <div class="cta btn-lg">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <p class="text-center" >Add an Ingredient</p>
      <% end %>
    </div>
  </div>
  <div class="btn-back">
      <%= link_to root_path do%>
        <i class="far fa-arrow-alt-circle-left" ></i>
      <% end %>
  </div>
</div>
