<div class="bg-main-color">
  <div class="banner">
    <h3 class="text-center">cocktail recipe</h3>
    <p class="text-center" >tasty & delicious cocktails at home ! </p>
  </div>
  <div class="flex-wrap" >
    <div class="cocktail-infos padding-section" >
      <div>
        <h1 class="text-center"><%= @cocktail.name %></h1>
        <p><%= @cocktail.description %></p>
      </div>
      <h3>ingredients</h3>
      <div class="flex-wrap flex-center " >
        <% @cocktail.doses.each do |dose| %>
          <ul>
            <li class="cocktail-infos-igdts">
              <div class="padding-right" >
                <span class="bold-text"> <%= dose.amount %> <%= dose.unit %></span>
              </div>
              <div class="padding-right text-center ">
               <%= dose.ingredient.name %>
              </div>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="cocktail-img" >
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, crop: :fill %>
      <% else %>
        <%= image_tag 'cocktail-default-image.png' %>
      <% end %>
    </div>
  </div>
</div>


