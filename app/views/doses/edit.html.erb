<div class="banner">
  <%= image_tag "banner-manage-ingdts.jpg" %>
</div>
<div class="wrapper">
  <div class="cocktail-card">
    <div class="cocktail-card-title">
      <h1 class="text-center">manage your ingredients</h1>
    </div>
    <div class="cocktail-card-details">
      <%= simple_form_for (@dose) do |f| %>
        <%= f.association :ingredient, :label => 'Choose an Ingredient' %>
        <%= f.input :amount %>
        <%= f.input :unit, collection: ['ml','slice','unit'], selected: 'ml' %>
        <hr>
        <%= f.button :submit, 'Add' ,class: "btn-danger" %>
        <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>
